{
  "name": "sample-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write \"services/**/*.ts\" \"services/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --watchAll",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "start": "nodemon -e ts build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run start\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.16.0",
    "concurrently": "^3.6.0",
    "express": "^4.16.3",
    "prettier": "^1.13.7",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "@types/jest": "^23.1.3",
    "jest": "^23.2.0",
    "ts-jest": "^22.4.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
